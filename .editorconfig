root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{cpp,hpp,txt,cmake}]
charset = utf-8
# 4 space indentation
indent_style = space
indent_size = 4

# Tab indentation
[Makefile]
indent_style = tab

